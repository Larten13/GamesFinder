<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/field_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/poster_of_genre"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foregroundGravity="top"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.MediumComponent"/>

        <TextView
            style="@style/TextAppearance.AppCompat.GeneralTextStyle.HeaderInCard"
            android:id="@+id/name_of_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_of_genre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster_of_genre"/>

        <TextView
            style="@style/TextAppearance.AppCompat.GeneralTextStyle.TextStyleInCard"
            android:id="@+id/count_of_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_of_genre"
            android:text="@string/count_of_games"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>