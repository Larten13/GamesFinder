<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.larten.android.gamesfinder.screens.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_titleFragment"
            app:destination="@id/gameDescriptionFragment" />
        <action
            android:id="@+id/action_mainFragment_to_finderFragment"
            app:destination="@id/finderFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDescriptionFragment"
        android:name="com.larten.android.gamesfinder.screens.title.GameDescriptionFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_game_description" >
        <action
            android:id="@+id/action_titleFragment_to_finderFragment"
            app:destination="@id/mainFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/finderFragment"
        android:name="com.larten.android.gamesfinder.screens.finder.FinderFragment"
        android:label="fragment_finder"
        tools:layout="@layout/fragment_finder" >
        <action
            android:id="@+id/action_finderFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_finderFragment_to_titleFragment"
            app:destination="@id/gameDescriptionFragment" />
        <argument
            android:name="name_of_genre"
            app:argType="string" />
    </fragment>
</navigation>