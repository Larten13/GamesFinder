<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr format="color" name="colorSecondaryDark"/>

    <style name="CardViewStyle" parent="CardView">
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="TextAppearance.AppCompat.GeneralTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="TextAppearance.AppCompat.GeneralTextStyle.Header" parent="TextAppearance.AppCompat.GeneralTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="TextAppearance.AppCompat.GeneralTextStyle.HeaderInCard" parent="TextAppearance.AppCompat.GeneralTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.GeneralTextStyle.TextStyleInCard" parent="TextAppearance.AppCompat.GeneralTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.AppCompat.GeneralTextStyle.Description" parent="TextAppearance.AppCompat.GeneralTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">normal</item>

    </style>
</resources>